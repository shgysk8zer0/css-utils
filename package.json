{
  "name": "@shgysk8zer0/css-utils",
  "version": "1.1.0",
  "description": "A collection of CSS packages",
  "type": "module",
  "main": "index.cjs",
  "module": "index.js",
  "exports": {
    "./*": {
      "import": "./*.js",
      "require": "./*.cjs"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "private": false,
  "scripts": {
    "test": "npm run lint:js && npm run build",
    "preversion": "npm test",
    "prepare": "npm run build",
    "dev": "rollup -cw",
    "lint:js": "eslint .",
    "fix:js": "eslint. --fix",
    "build": "npm run build:js",
    "build:js": "rollup -c rollup.config.js",
    "build:css": "postcss test/index.css -o test/index.min.css",
    "create:lock": "npm i --package-lock-only",
    "version:bump": "npm run version:bump:patch",
    "version:bump:patch": "npm version --no-git-tag-version patch",
    "version:bump:minor": "npm version --no-git-tag-version minor",
    "version:bump:major": "npm version --no-git-tag-version major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shgysk8zer0/npm-template.git"
  },
  "author": "Chris Zuber <admin@kernvalley.us>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shgysk8zer0/npm-template/issues"
  },
  "homepage": "https://github.com/shgysk8zer0/npm-template#readme",
  "devDependencies": {
    "@shgysk8zer0/js-utils": "^1.0.0"
  },
  "dependencies": {
    "@shgysk8zer0/postcss-import": "^1.0.1",
    "cssnano": "^6.0.1",
    "cssnano-preset-default": "^6.0.1",
    "postcss": "^8.4.24",
    "postcss-cli": "^10.1.0",
    "postcss-discard-comments": "^6.0.0",
    "postcss-media-minmax": "^5.0.0",
    "postcss-nesting": "^11.2.2",
    "postcss-preset-env": "^8.4.2",
    "stylelint": "^15.7.0",
    "stylelint-config-recommended": "^12.0.0",
    "stylelint-config-standard": "^33.0.0"
  }
}
